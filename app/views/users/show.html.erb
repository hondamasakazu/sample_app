<% provide(:title, @user.name) %>
<div class = "row">
	<aside class = "span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 40 %>
				<%= @user.name %>
			</h1>
			<br/>
			<fieldset>
			<font size="2">性別：<%= @user.sex_name %></font>
			<p ><font size="2"><%= @user.email %></font></p>
			</fieldset>
			<fieldset>
			<legend><strong>趣味</strong></legend>
				<%= @user.hobby %>
			</fieldset>
			<fieldset>
			<legend><strong>所属チーム</strong></legend>
		  <ul class="groups">
		    <% @user.join_groups.each do |group| %>
		  	<li>
			  	 <%= link_to group.name, group %>
		  	</li>
		    <% end %>
			</ul>
			</fieldset>
		</section>
	</aside>
	<div class="span8">
    <% if @user.microposts.any? %>
      <h3>ツイート (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
