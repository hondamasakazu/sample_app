<% provide(:title, "Edit user") %>
<h1>アカウント編集</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.submit "Save changes", class: "btn btn-samll btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <%= link_to "change","http://gravatar.com/emails",:target=>["_blank"] %>

  </div>
</div>